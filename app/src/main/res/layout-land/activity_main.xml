<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="245dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/botAndroid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/androidbot"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="233dp"
        android:layout_marginTop="49dp"
        android:text="@string/plane"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@drawable/plane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/watermelon"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@drawable/update"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/gray"
        android:text="@string/picGallery"
        android:textColor="@color/watermelon"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="TextContrastCheck,TextSizeCheck" />

    <Button
        android:id="@+id/button4"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/darkgray"
        android:backgroundTintMode="src_in"
        android:text="@string/unlock5"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="27dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/star"
        android:drawableRight="@drawable/star"
        android:isScrollContainer="false"
        android:selectAllOnFocus="false"
        android:text="@string/level4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:iconSize="20dp"
        app:iconTint="@color/gold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/button6"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="27dp"
        android:backgroundTint="@color/green"
        android:text="@string/musicP"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/pause"
        app:iconGravity="start"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button4" />
</androidx.constraintlayout.widget.ConstraintLayout>